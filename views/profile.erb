<div class="new_entry">
	<form action="/newpost" method="POST">
		<p>
			<label for="title">Title</label>
			<input type="textarea" name="[post]title" required><br>
		</p>
		<p>
			<label for="body">Body</label>
			<input type="textarea" name="[post]body" required><br>
		</p>
		<p>
			<input type="submit" value="post">
		</p>
	</form>
</div>

<div class="myfeed">
<h1>My Posts</h1>
	<% @posts.each do |post| %>
	<p><%= post.title %></p>
	<p><%= post.body %></p>
	<hr>
<%end%>
</div>